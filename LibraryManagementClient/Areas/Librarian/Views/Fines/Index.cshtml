@{
    ViewData["Title"] = "Manage Fines";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-dollar-sign me-2"></i>Manage Fines
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-area="Librarian" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            To view fines, search for a borrower in <a asp-controller="Borrowers" asp-action="Index">Borrowers Management</a> 
            and access their fine details from their profile.
        </div>
        
        <div class="text-center py-5">
            <i class="fas fa-search text-muted mb-3" style="font-size: 4rem;"></i>
            <h5 class="text-muted">Search for Borrowers</h5>
            <p class="text-muted mb-4">Find borrowers to view and manage their fines</p>
            <a asp-controller="Borrowers" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-users me-2"></i>Go to Borrowers
            </a>
        </div>
    </div>
</div>
