@{
    ViewData["Title"] = "Librarian Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-book me-2"></i>Librarian Dashboard
        </h2>
        <p class="text-muted">Manage your library operations</p>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <a asp-area="Librarian" asp-controller="Books" asp-action="Index" class="text-decoration-none">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-book text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Manage Books</h5>
                    <p class="text-muted small">Add, edit, remove books</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="Librarian" asp-controller="Loans" asp-action="Index" class="text-decoration-none">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-exchange-alt text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Manage Loans</h5>
                    <p class="text-muted small">Issue & return books</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="Librarian" asp-controller="Reservations" asp-action="Index" class="text-decoration-none">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-bookmark text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Reservations</h5>
                    <p class="text-muted small">Manage book reservations</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="Librarian" asp-controller="Fines" asp-action="Index" class="text-decoration-none">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-dollar-sign text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Fines</h5>
                    <p class="text-muted small">Collect & manage fines</p>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card dashboard-card shadow-sm">
            <div class="card-body text-center">
                <div class="stat-number">--</div>
                <p class="text-muted mb-0">Today's Loans</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card dashboard-card accent shadow-sm">
            <div class="card-body text-center">
                <div class="stat-number text-accent">--</div>
                <p class="text-muted mb-0">Due Soon</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card dashboard-card shadow-sm">
            <div class="card-body text-center">
                <div class="stat-number text-danger">--</div>
                <p class="text-muted mb-0">Overdue</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card dashboard-card shadow-sm">
            <div class="card-body text-center">
                <div class="stat-number">--</div>
                <p class="text-muted mb-0">Pending Reservations</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Links -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-link me-2"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a asp-area="Librarian" asp-controller="Loans" asp-action="Create" class="btn btn-outline-primary w-100">
                            <i class="fas fa-plus me-2"></i>New Loan
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-area="Librarian" asp-controller="Books" asp-action="Create" class="btn btn-outline-primary w-100">
                            <i class="fas fa-book me-2"></i>Add Book
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-area="Librarian" asp-controller="Borrowers" asp-action="Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-users me-2"></i>View Borrowers
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-area="Librarian" asp-controller="Loans" asp-action="Overdue" class="btn btn-outline-danger w-100">
                            <i class="fas fa-exclamation-triangle me-2"></i>Overdue Loans
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
