@model List<LibraryManagementClient.Models.UserDto>
@{
    ViewData["Title"] = "Manage Borrowers";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-users me-2"></i>Manage Borrowers
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search Form -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-10">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by name, email, or card number..." value="@ViewBag.SearchTerm" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-2"></i>Search
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Card Number</th>
                        <th>Home Library</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var borrower in Model)
                    {
                        <tr>
                            <td><strong>@borrower.FullName</strong></td>
                            <td>@borrower.Email</td>
                            <td>@(borrower.CardNumber ?? "N/A")</td>
                            <td>@borrower.HomeLibraryName</td>
                            <td>
                                @if (borrower.IsLocked)
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-lock me-1"></i>Locked
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Active
                                    </span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@borrower.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-users text-muted mb-3" style="font-size: 4rem;"></i>
                <h5 class="text-muted">No borrowers found</h5>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <p class="text-muted">Try a different search term or <a asp-action="Index">view all borrowers</a></p>
                }
            </div>
        }
    </div>
</div>
