@model LibraryManagementClient.Areas.Librarian.Controllers.UpdateSuggestionStatusDto
@using LibraryManagementClient.Models
@{
    ViewData["Title"] = "Update Suggestion Status";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-edit me-2"></i>Update Suggestion Status
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Suggestions
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label fw-bold">New Status</label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<SuggestionStatus>()">
                            <option value="">-- Select Status --</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="AdminNotes" class="form-label fw-bold">Admin Notes (Optional)</label>
                        <textarea asp-for="AdminNotes" class="form-control" rows="4" 
                                  placeholder="Add any notes or reasons for this status change..."></textarea>
                        <span asp-validation-for="AdminNotes" class="text-danger"></span>
                        <small class="form-text text-muted">These notes will be visible to the borrower.</small>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-2"></i>Update Status
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="card-title">Status Information</h6>
                <div class="mb-3">
                    <h6 class="text-warning">Pending</h6>
                    <small class="text-muted">New suggestions awaiting review</small>
                </div>
                <div class="mb-3">
                    <h6 class="text-success">Approved</h6>
                    <small class="text-muted">Suggestions approved for purchase</small>
                </div>
                <div class="mb-0">
                    <h6 class="text-danger">Rejected</h6>
                    <small class="text-muted">Suggestions not approved</small>
                </div>
            </div>
        </div>
        
        <div class="card bg-info text-white mt-3">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="fas fa-info-circle me-2"></i>Pro Tip
                </h6>
                <p class="card-text small mb-0">
                    Provide clear and helpful admin notes when rejecting suggestions. This helps borrowers understand the decision and may improve future suggestions.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
