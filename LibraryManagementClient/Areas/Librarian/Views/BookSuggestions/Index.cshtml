@model List<LibraryManagementClient.Models.BookSuggestionDto>
@using LibraryManagementClient.Models
@{
    ViewData["Title"] = "Manage Book Suggestions";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-lightbulb me-2"></i>Book Suggestions
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Form -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by title, author, or user..." value="@ViewBag.SearchTerm" />
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select" asp-items="Html.GetEnumSelectList<SuggestionStatus>()">
                    <option value="">All Status</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter me-2"></i>Filter
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-redo me-2"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Bulk Actions Form -->
@if (Model.Any())
{
    <form asp-action="BulkUpdateStatus" method="post" id="bulkActionForm">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label">Select All</label>
                        <input type="checkbox" class="form-check-input" id="selectAll" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="Status" class="form-select" asp-items="Html.GetEnumSelectList<SuggestionStatus>()">
                            <option value="">-- Select Status --</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Admin Notes</label>
                        <input type="text" name="AdminNotes" class="form-control" placeholder="Optional notes for all selected suggestions..." />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="fas fa-edit me-2"></i>Update Selected
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Suggestions Table -->
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th width="40">
                                    <input type="checkbox" class="form-check-input suggestion-checkbox" />
                                </th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Submitted By</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th width="120">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var suggestion in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="SelectedSuggestionIds" value="@suggestion.Id" class="form-check-input suggestion-checkbox" />
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(suggestion.ISBN))
                                        {
                                            <small class="text-muted">ISBN: @suggestion.ISBN</small><br />
                                        }
                                        @suggestion.Title
                                    </td>
                                    <td>@suggestion.Author</td>
                                    <td>@suggestion.UserName</td>
                                    <td>@suggestion.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @switch (suggestion.Status)
                                        {
                                            case BusinessObjects.SuggestionStatus.Pending:
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case BusinessObjects.SuggestionStatus.Approved:
                                                <span class="badge bg-success">Approved</span>
                                                break;
                                            case BusinessObjects.SuggestionStatus.Rejected:
                                                <span class="badge bg-danger">Rejected</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@suggestion.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@suggestion.Id" class="btn btn-sm btn-outline-primary me-1" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="UpdateStatus" asp-route-id="@suggestion.Id" class="btn btn-sm btn-outline-warning" title="Update Status">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-lightbulb fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No book suggestions found</h5>
            <p class="text-muted">There are no book suggestions matching your criteria.</p>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Select all functionality
            $('#selectAll').change(function() {
                $('.suggestion-checkbox').prop('checked', $(this).prop('checked'));
            });

            // Uncheck select all if any individual checkbox is unchecked
            $('.suggestion-checkbox').change(function() {
                if (!$(this).prop('checked')) {
                    $('#selectAll').prop('checked', false);
                }
                
                // Check if all individual checkboxes are checked
                var allChecked = $('.suggestion-checkbox').length === $('.suggestion-checkbox:checked').length;
                $('#selectAll').prop('checked', allChecked);
            });
        });
    </script>
}
