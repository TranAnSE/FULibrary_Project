@model LibraryManagementClient.Models.CreateLoanViewModel
@{
    ViewData["Title"] = "Create New Loan";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-plus me-2"></i>Create New Loan
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Simply enter borrower's <strong>Card Number</strong> and book's <strong>Registration Number</strong> to create a loan.
                    </div>

                    <div class="mb-3">
                        <label asp-for="CardNumber" class="form-label">Card Number <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input asp-for="CardNumber" class="form-control" placeholder="Enter borrower's card number" />
                            <button class="btn btn-outline-secondary" type="button" id="searchBorrower">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                        <small class="form-text text-muted">Enter library card number printed on borrower's card</small>
                        @if (!string.IsNullOrEmpty(Model?.BorrowerName))
                        {
                            <div class="alert alert-success mt-2">
                                <i class="fas fa-user me-2"></i><strong>Found:</strong> @Model.BorrowerName
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label asp-for="RegistrationNumber" class="form-label">Registration Number <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter book registration number" />
                            <button class="btn btn-outline-secondary" type="button" id="searchBook">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                        <small class="form-text text-muted">Enter registration number (ĐKCB) from book label</small>
                        @if (!string.IsNullOrEmpty(Model?.BookTitle))
                        {
                            <div class="alert alert-success mt-2">
                                <i class="fas fa-book me-2"></i><strong>Found:</strong> @Model.BookTitle
                            </div>
                        }
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Note:</strong> The system will automatically calculate due date based on library settings.
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create Loan
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2"></i>Quick Guide
                </h6>
            </div>
            <div class="card-body">
                <p class="small mb-2"><strong>How to Create a Loan:</strong></p>
                <ol class="small">
                    <li><strong>Search Borrower:</strong> Enter the borrower's Card Number (printed on their library card) in the first field</li>
                    <li>Click the <i class="fas fa-search"></i> button to verify the borrower exists and view their name</li>
                    <li><strong>Search Book Copy:</strong> Enter the book's Registration Number (ĐKCB from the book label) in the second field</li>
                    <li>Click the <i class="fas fa-search"></i> button to verify the book copy is available and view the book title</li>
                    <li>Review the information and click "Create Loan" to complete the process</li>
                </ol>
                <p class="small mb-0"><strong>Tip:</strong> Use the search buttons to validate information before submitting the form.</p>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>System Rules
                </h6>
            </div>
            <div class="card-body">
                <ul class="small mb-0">
                    <li>Borrower must not exceed maximum books limit</li>
                    <li>Book copy must be available</li>
                    <li>Borrower account must not be locked</li>
                    <li>Due date is calculated automatically</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#searchBorrower').click(function() {
                const cardNumber = $('#CardNumber').val();
                if (!cardNumber) {
                    alert('Please enter a card number');
                    return;
                }
                
                $.get('/Librarian/Loans/SearchBorrower?cardNumber=' + encodeURIComponent(cardNumber))
                    .done(function(data) {
                        if (data) {
                            alert('Borrower found: ' + data.fullName);
                            // Optionally auto-fill hidden fields
                        } else {
                            alert('Borrower not found with this card number');
                        }
                    })
                    .fail(function() {
                        alert('Error searching for borrower');
                    });
            });
            
            $('#searchBook').click(function() {
                const regNumber = $('#RegistrationNumber').val();
                if (!regNumber) {
                    alert('Please enter a registration number');
                    return;
                }
                
                $.get('/Librarian/Loans/SearchBookCopy?registrationNumber=' + encodeURIComponent(regNumber))
                    .done(function(data) {
                        if (data) {
                            alert('Book found: ' + data.bookTitle + ' by ' + data.bookAuthor);
                            // Optionally auto-fill hidden fields
                        } else {
                            alert('Book copy not found with this registration number');
                        }
                    })
                    .fail(function() {
                        alert('Error searching for book');
                    });
            });
        });
    </script>
}
