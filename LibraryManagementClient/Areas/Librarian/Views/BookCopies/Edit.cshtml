@model LibraryManagementClient.Models.BookCopyDto
@{
    ViewData["Title"] = "Edit Book Copy";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-edit me-2"></i>Edit Book Copy
        </h2>
        <p class="text-muted">Registration Number: <code>@Model.RegistrationNumber</code></p>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">Registration Number</label>
                        <input type="text" class="form-control" value="@Model.RegistrationNumber" disabled />
                        <small class="form-text text-muted">Registration number cannot be changed</small>
                    </div>

                    <div class="mb-3">
                        <label for="shelfLocationId" class="form-label">Shelf Location</label>
                        <select class="form-select" id="shelfLocationId" name="shelfLocationId" asp-for="ShelfLocationId">
                            <option value="">Select a shelf location</option>
                            @foreach (var location in (List<LibraryManagementClient.Models.ShelfLocationDto>)ViewBag.ShelfLocations)
                            {
                                <option value="@location.Id">@location.Code - @location.Description</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="Available">Available</option>
                            <option value="Borrowed">Borrowed</option>
                            <option value="Reserved">Reserved</option>
                            <option value="Damaged">Damaged</option>
                            <option value="Lost">Lost</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                        <small class="form-text text-muted">Current status of this copy</small>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> Changing the status may affect active loans or reservations.
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-controller="Books" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Copy Information
                </h6>
            </div>
            <div class="card-body">
                <p class="small mb-1"><strong>Copy ID:</strong> @Model.Id</p>
                <p class="small mb-1"><strong>Registration #:</strong> @Model.RegistrationNumber</p>
                <p class="small mb-0"><strong>Current Status:</strong> <span class="badge bg-secondary">@Model.Status</span></p>
            </div>
        </div>

        <div class="card shadow-sm mt-3">
            <div class="card-header bg-danger text-white">
                <h6 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Danger Zone
                </h6>
            </div>
            <div class="card-body">
                <p class="small mb-2">Permanently delete this copy from the system.</p>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('Are you sure you want to delete this copy? This action cannot be undone.')">
                        <i class="fas fa-trash me-2"></i>Delete Copy
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
