@model List<LibraryManagementClient.Models.ReservationDto>
@{
    ViewData["Title"] = "My Reservations";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-bookmark me-2"></i>My Reservations
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="History" class="btn btn-outline-secondary">
            <i class="fas fa-history me-2"></i>View History
        </a>
        <a asp-controller="MyAccount" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-bookmark text-muted mb-3" style="font-size: 4rem;"></i>
            <h5 class="text-muted">No Active Reservations</h5>
            <p class="text-muted">You don't have any pending book reservations.</p>
            <a asp-area="" asp-controller="Search" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-search me-2"></i>Browse Books
            </a>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        You will be notified when your reserved books become available. Pick them up before the expiry date.
    </div>

    <div class="row">
        @foreach (var reservation in Model)
        {
            var expiryDate = reservation.ExpiryDate;
            var daysLeft = (expiryDate - DateTime.Now).Days;
            bool expiringSoon = daysLeft <= 2;

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100 @(expiringSoon ? "border-warning" : "")">
                    @if (!string.IsNullOrEmpty(reservation.BookCoverImageUrl))
                    {
                        <img src="@reservation.BookCoverImageUrl" class="card-img-top" alt="@reservation.BookTitle" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                            <i class="fas fa-book text-muted" style="font-size: 4rem;"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h6 class="card-title">@reservation.BookTitle</h6>
                        <p class="card-text small">
                            <i class="fas fa-calendar me-1"></i>
                            <strong>Reserved:</strong> @reservation.ReservationDate.ToString("MMM dd, yyyy")
                        </p>
                        <p class="card-text small">
                            <i class="fas fa-calendar-times me-1"></i>
                            <strong>Expires:</strong> @expiryDate.ToString("MMM dd, yyyy")
                        </p>
                        @if (expiringSoon)
                        {
                            <div class="alert alert-warning py-2 mb-2">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                <strong>Expires in @daysLeft days!</strong>
                            </div>
                        }
                        else
                        {
                            <p class="card-text small text-muted">
                                <i class="fas fa-clock me-1"></i>
                                @daysLeft days until expiry
                            </p>
                        }
                        <p class="card-text small">
                            <span class="badge bg-warning text-dark">@reservation.Status</span>
                        </p>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Cancel" asp-route-id="@reservation.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100" onclick="return confirm('Cancel this reservation?')">
                                <i class="fas fa-times me-2"></i>Cancel Reservation
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
