@model List<LibraryManagementClient.Models.BookSuggestionDto>
@{
    ViewData["Title"] = "My Book Suggestions";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-lightbulb me-2"></i>My Book Suggestions
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Suggest New Book
        </a>
        <a asp-controller="MyAccount" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-lightbulb text-muted mb-3" style="font-size: 4rem;"></i>
            <h5 class="text-muted">No Suggestions Yet</h5>
            <p class="text-muted">You haven't suggested any books yet.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Suggest Your First Book
            </a>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var suggestion in Model.OrderByDescending(s => s.CreatedAt))
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="card-title mb-0">@suggestion.Title</h6>
                            @if (suggestion.Status == BusinessObjects.SuggestionStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (suggestion.Status == BusinessObjects.SuggestionStatus.Approved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (suggestion.Status == BusinessObjects.SuggestionStatus.Rejected)
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                        </div>
                        
                        <p class="card-text small">
                            <i class="fas fa-user me-1"></i>
                            <strong>Author:</strong> @suggestion.Author
                        </p>
                        
                        @if (!string.IsNullOrEmpty(suggestion.ISBN))
                        {
                            <p class="card-text small">
                                <i class="fas fa-barcode me-1"></i>
                                <strong>ISBN:</strong> @suggestion.ISBN
                            </p>
                        }
                        
                        <p class="card-text small">
                            <i class="fas fa-calendar me-1"></i>
                            <strong>Submitted:</strong> @suggestion.CreatedAt.ToString("MMM dd, yyyy")
                        </p>
                        
                        <hr />
                        
                        <p class="card-text small">
                            <strong>Your Reason:</strong><br />
                            @suggestion.Reason
                        </p>
                        
                        @if (!string.IsNullOrEmpty(suggestion.AdminNotes))
                        {
                            <div class="alert @(suggestion.Status == BusinessObjects.SuggestionStatus.Approved ? "alert-success" : "alert-info") py-2 mt-2">
                                <p class="small mb-0">
                                    <i class="fas fa-comment me-1"></i>
                                    <strong>Library Response:</strong><br />
                                    @suggestion.AdminNotes
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Statistics Summary -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-3">
                    <div class="stat-number text-secondary">@Model.Count</div>
                    <small class="text-muted">Total Suggestions</small>
                </div>
                <div class="col-md-3">
                    <div class="stat-number text-warning">@Model.Count(s => s.Status == BusinessObjects.SuggestionStatus.Pending)</div>
                    <small class="text-muted">Pending Review</small>
                </div>
                <div class="col-md-3">
                    <div class="stat-number text-success">@Model.Count(s => s.Status == BusinessObjects.SuggestionStatus.Approved)</div>
                    <small class="text-muted">Approved</small>
                </div>
                <div class="col-md-3">
                    <div class="stat-number text-danger">@Model.Count(s => s.Status == BusinessObjects.SuggestionStatus.Rejected)</div>
                    <small class="text-muted">Rejected</small>
                </div>
            </div>
        </div>
    </div>
}

<style>
.stat-number {
    font-size: 1.5rem;
    font-weight: bold;
}
</style>
