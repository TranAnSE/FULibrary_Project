@model LibraryManagementClient.Models.LibraryDto
@{
    ViewData["Title"] = "Add New Library";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-building me-2"></i>Add New Library
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter library name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter library address"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="library@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" type="tel" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WeekdayHours" class="form-label"></label>
                        <input asp-for="WeekdayHours" class="form-control" placeholder="e.g., Mon-Fri: 8AM-5PM" />
                        <span asp-validation-for="WeekdayHours" class="text-danger"></span>
                        <small class="form-text text-muted">Enter weekday operating hours</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WeekendHours" class="form-label"></label>
                        <input asp-for="WeekendHours" class="form-control" placeholder="e.g., Sat: 9AM-1PM, Sun: Closed" />
                        <span asp-validation-for="WeekendHours" class="text-danger"></span>
                        <small class="form-text text-muted">Enter weekend operating hours</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Website" class="form-label"></label>
                        <input asp-for="Website" type="url" class="form-control" placeholder="https://library.example.com" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                        <small class="form-text text-muted">Library website URL</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SocialMedia" class="form-label"></label>
                        <input asp-for="SocialMedia" class="form-control" placeholder="https://facebook.com/library" />
                        <span asp-validation-for="SocialMedia" class="text-danger"></span>
                        <small class="form-text text-muted">Social media links</small>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create Library
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Information
                </h6>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-2">
                    <i class="fas fa-lightbulb text-warning me-2"></i>
                    <strong>Tips:</strong>
                </p>
                <ul class="small text-muted">
                    <li>Library name is required</li>
                    <li>Email should be a valid email format</li>
                    <li>All other fields are optional</li>
                    <li>Operating hours will be displayed to users</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
