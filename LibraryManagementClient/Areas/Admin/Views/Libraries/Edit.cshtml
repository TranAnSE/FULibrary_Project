@model LibraryManagementClient.Models.LibraryDto
@{
    ViewData["Title"] = "Edit Library";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-edit me-2"></i>Edit Library
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" type="tel" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WeekdayHours" class="form-label"></label>
                        <input asp-for="WeekdayHours" class="form-control" />
                        <span asp-validation-for="WeekdayHours" class="text-danger"></span>
                        <small class="form-text text-muted">Weekday operating hours</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WeekendHours" class="form-label"></label>
                        <input asp-for="WeekendHours" class="form-control" />
                        <span asp-validation-for="WeekendHours" class="text-danger"></span>
                        <small class="form-text text-muted">Weekend operating hours</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Website" class="form-label"></label>
                        <input asp-for="Website" type="url" class="form-control" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                        <small class="form-text text-muted">Library website URL</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SocialMedia" class="form-label"></label>
                        <input asp-for="SocialMedia" class="form-control" />
                        <span asp-validation-for="SocialMedia" class="text-danger"></span>
                        <small class="form-text text-muted">Social media links</small>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Library Information
                </h6>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-1">
                    <strong>Library ID:</strong> @Model.Id
                </p>
            </div>
        </div>
        
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Warning
                </h6>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-0">
                    Modifying library information may affect associated users, books, and settings.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
