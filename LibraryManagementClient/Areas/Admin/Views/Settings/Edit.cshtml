@model LibraryManagementClient.Models.SystemSettingsDto
@{
    ViewData["Title"] = "Edit System Settings";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-cog me-2"></i>Edit Settings for @Model.LibraryName
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="LibraryId" />
                    <input type="hidden" asp-for="LibraryName" />

                    <h5 class="mb-3"><i class="fas fa-book me-2"></i>Loan Settings</h5>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaxBooksPerBorrower" class="form-label"></label>
                            <input asp-for="MaxBooksPerBorrower" type="number" class="form-control" min="1" max="20" required />
                            <span asp-validation-for="MaxBooksPerBorrower" class="text-danger"></span>
                            <small class="form-text text-muted">Maximum books a borrower can have at once</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LoanDurationDays" class="form-label"></label>
                            <input asp-for="LoanDurationDays" type="number" class="form-control" min="1" max="90" required />
                            <span asp-validation-for="LoanDurationDays" class="text-danger"></span>
                            <small class="form-text text-muted">Default loan period in days</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaxRenewals" class="form-label"></label>
                            <input asp-for="MaxRenewals" type="number" class="form-control" min="0" max="5" required />
                            <span asp-validation-for="MaxRenewals" class="text-danger"></span>
                            <small class="form-text text-muted">Maximum number of renewals allowed</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="RenewalDays" class="form-label"></label>
                            <input asp-for="RenewalDays" type="number" class="form-control" min="1" max="30" required />
                            <span asp-validation-for="RenewalDays" class="text-danger"></span>
                            <small class="form-text text-muted">Days added per renewal</small>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3"><i class="fas fa-dollar-sign me-2"></i>Fine Settings</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DailyFineRate" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="DailyFineRate" type="number" step="0.01" class="form-control" min="0" max="100" required />
                            </div>
                            <span asp-validation-for="DailyFineRate" class="text-danger"></span>
                            <small class="form-text text-muted">Fine amount per overdue day</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LostBookFinePercent" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="LostBookFinePercent" type="number" step="0.1" class="form-control" min="0" max="200" required />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="LostBookFinePercent" class="text-danger"></span>
                            <small class="form-text text-muted">Percentage of book price for lost books</small>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3"><i class="fas fa-bookmark me-2"></i>Reservation Settings</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ReservationExpiryDays" class="form-label"></label>
                            <input asp-for="ReservationExpiryDays" type="number" class="form-control" min="1" max="30" required />
                            <span asp-validation-for="ReservationExpiryDays" class="text-danger"></span>
                            <small class="form-text text-muted">Days until reservation expires if not fulfilled</small>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Current Library
                </h6>
            </div>
            <div class="card-body">
                <p class="mb-1"><strong>Library:</strong> @Model.LibraryName</p>
                <p class="mb-0 small text-muted">Settings ID: @Model.Id</p>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2"></i>Tips
                </h6>
            </div>
            <div class="card-body">
                <ul class="small mb-0">
                    <li>Higher daily fines encourage timely returns</li>
                    <li>Longer loan durations reduce administrative work</li>
                    <li>More renewals offer flexibility to borrowers</li>
                    <li>Lost book fine should cover replacement cost</li>
                    <li>Reservation expiry prevents indefinite holds</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
