@model LibraryManagementClient.Models.UpdateUserDto
@{
    ViewData["Title"] = "Edit User";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-user-edit me-2"></i>Edit User
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CardNumber" class="form-label">Card Number</label>
                        <input asp-for="CardNumber" class="form-control" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HomeLibraryId" class="form-label">Home Library</label>
                        <select asp-for="HomeLibraryId" class="form-select">
                            <option value="">Select a library</option>
                            @foreach (var library in (List<LibraryManagementClient.Models.LibraryDto>)ViewBag.Libraries)
                            {
                                <option value="@library.Id">@library.Name</option>
                            }
                        </select>
                        <span asp-validation-for="HomeLibraryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AssignedLibraryId" class="form-label">Assigned Library</label>
                        <select asp-for="AssignedLibraryId" class="form-select">
                            <option value="">None</option>
                            @foreach (var library in (List<LibraryManagementClient.Models.LibraryDto>)ViewBag.Libraries)
                            {
                                <option value="@library.Id">@library.Name</option>
                            }
                        </select>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
