@model LibraryManagementClient.Models.CreateUserDto
@{
    ViewData["Title"] = "Create User";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-user-plus me-2"></i>Create New User
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small class="form-text text-muted">
                            A magic link will be sent to this email for password setup
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CardNumber" class="form-label">Card Number (Optional)</label>
                        <input asp-for="CardNumber" class="form-control" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number (Optional)</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HomeLibraryId" class="form-label">Home Library</label>
                        <select asp-for="HomeLibraryId" class="form-select">
                            <option value="">Select a library</option>
                            @foreach (var library in (List<LibraryManagementClient.Models.LibraryDto>)ViewBag.Libraries)
                            {
                                <option value="@library.Id">@library.Name</option>
                            }
                        </select>
                        <span asp-validation-for="HomeLibraryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AssignedLibraryId" class="form-label">Assigned Library (For Librarians)</label>
                        <select asp-for="AssignedLibraryId" class="form-select">
                            <option value="">None</option>
                            @foreach (var library in (List<LibraryManagementClient.Models.LibraryDto>)ViewBag.Libraries)
                            {
                                <option value="@library.Id">@library.Name</option>
                            }
                        </select>
                        <small class="form-text text-muted">
                            Only required for Librarian role
                        </small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Roles</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Roles" value="Admin" id="roleAdmin" />
                            <label class="form-check-label" for="roleAdmin">
                                <i class="fas fa-user-shield me-1 text-danger"></i>Admin
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Roles" value="Librarian" id="roleLibrarian" />
                            <label class="form-check-label" for="roleLibrarian">
                                <i class="fas fa-book me-1 text-primary"></i>Librarian
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Roles" value="Borrower" id="roleBorrower" checked />
                            <label class="form-check-label" for="roleBorrower">
                                <i class="fas fa-user me-1 text-success"></i>Borrower
                            </label>
                        </div>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Information
                </h6>
            </div>
            <div class="card-body">
                <h6 class="fw-bold">Role Descriptions:</h6>
                <ul class="small mb-3">
                    <li><strong>Admin:</strong> Full system access</li>
                    <li><strong>Librarian:</strong> Manage books and loans at assigned library</li>
                    <li><strong>Borrower:</strong> Can borrow books and make reservations</li>
                </ul>
                <div class="alert alert-warning small mb-0">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    The user will receive an email with a magic link to set their password.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
