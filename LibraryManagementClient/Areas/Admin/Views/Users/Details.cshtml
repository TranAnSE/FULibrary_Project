@model LibraryManagementClient.Models.UserDto
@{
    ViewData["Title"] = "User Details";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="text-primary">
            <i class="fas fa-user me-2"></i>User Details
        </h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Basic Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Full Name:</div>
                    <div class="col-sm-8">@Model.FullName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Email:</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Card Number:</div>
                    <div class="col-sm-8">@(Model.CardNumber ?? "N/A")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Phone Number:</div>
                    <div class="col-sm-8">@(Model.PhoneNumber ?? "N/A")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Home Library:</div>
                    <div class="col-sm-8">@Model.HomeLibraryName</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.AssignedLibraryName))
                {
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Assigned Library:</div>
                        <div class="col-sm-8">@Model.AssignedLibraryName</div>
                    </div>
                }
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Roles:</div>
                    <div class="col-sm-8">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-primary me-1">@role</span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Status:</div>
                    <div class="col-sm-8">
                        @if (Model.IsLocked)
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-lock me-1"></i>Locked
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check me-1"></i>Active
                            </span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Created At:</div>
                    <div class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">
                    <i class="fas fa-cog me-2"></i>Actions
                </h6>
            </div>
            <div class="card-body">
                @if (Model.IsLocked)
                {
                    <form asp-action="Unlock" asp-route-id="@Model.Id" method="post" class="mb-2">
                        <button type="submit" class="btn btn-success w-100" onclick="return confirm('Unlock this user?')">
                            <i class="fas fa-unlock me-2"></i>Unlock User
                        </button>
                    </form>
                }
                else
                {
                    <form asp-action="Lock" asp-route-id="@Model.Id" method="post" class="mb-2">
                        <button type="submit" class="btn btn-warning w-100" onclick="return confirm('Lock this user?')">
                            <i class="fas fa-lock me-2"></i>Lock User
                        </button>
                    </form>
                }
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this user?')">
                        <i class="fas fa-trash me-2"></i>Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
