@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
        </h2>
        <p class="text-muted">System-wide overview and management</p>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="text-decoration-none">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="text-muted small">Librarians & Borrowers</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="Admin" asp-controller="Libraries" asp-action="Index" class="text-decoration-none">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-building text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Manage Libraries</h5>
                    <p class="text-muted small">Branch locations</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="text-decoration-none">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-cog text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">System Settings</h5>
                    <p class="text-muted small">Library configurations</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="Admin" asp-controller="Catalogs" asp-action="Index" class="text-decoration-none">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-folder text-primary mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Catalogs</h5>
                    <p class="text-muted small">Categories & metadata</p>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Statistics Overview -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>System Statistics
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <div class="border-end">
                            <div class="stat-number">--</div>
                            <p class="text-muted mb-0">Total Libraries</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="border-end">
                            <div class="stat-number">--</div>
                            <p class="text-muted mb-0">Total Books</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="border-end">
                            <div class="stat-number">--</div>
                            <p class="text-muted mb-0">Active Users</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-number">--</div>
                        <p class="text-muted mb-0">Active Loans</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-clock me-2"></i>Recent Activities
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Activity tracking coming soon
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>System Alerts
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    All systems operational
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Links -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-link me-2"></i>Quick Links
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-2">
                        <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-outline-primary w-100">
                            <i class="fas fa-user-plus me-2"></i>Add New User
                        </a>
                    </div>
                    <div class="col-md-4 mb-2">
                        <a asp-area="Admin" asp-controller="Libraries" asp-action="Create" class="btn btn-outline-primary w-100">
                            <i class="fas fa-plus me-2"></i>Add New Library
                        </a>
                    </div>
                    <div class="col-md-4 mb-2">
                        <a asp-area="Admin" asp-controller="Reports" asp-action="Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-chart-line me-2"></i>View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
