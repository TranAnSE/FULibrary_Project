@model LibraryManagementClient.Models.SearchViewModel
@{
    ViewData["Title"] = "Search Results";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="text-primary">
            <i class="fas fa-search me-2"></i>Search Results
        </h2>
    </div>
</div>

<!-- Search Box -->
<div class="row mb-4">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Index" method="get" class="search-box">
            <div class="input-group input-group-lg">
                <input type="text" name="searchTerm" class="form-control" 
                       value="@Model.SearchTerm" 
                       placeholder="Search for books, authors, subjects..." 
                       aria-label="Search" />
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search me-2"></i>Search
                </button>
            </div>
        </form>
        <div class="mt-2 text-center">
            <a asp-action="Advanced" class="text-decoration-none">
                <i class="fas fa-sliders-h me-1"></i>Advanced Search
            </a>
        </div>
    </div>
</div>

<!-- Results Count -->
@if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <div class="row mb-3">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Found <strong>@Model.TotalResults</strong> result(s) for "<strong>@Model.SearchTerm</strong>"
            </div>
        </div>
    </div>
}

<!-- Search Results -->
@if (Model.Results.Any())
{
    <div class="row">
        @foreach (var book in Model.Results)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card book-card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                    {
                        <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" />
                    }
                    else
                    {
                        <div class="card-img-top d-flex align-items-center justify-content-center bg-light">
                            <i class="fas fa-book text-muted" style="font-size: 4rem;"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title" title="@book.Title">@book.Title</h6>
                        <p class="text-muted text-sm mb-2">
                            <i class="fas fa-user me-1"></i>
                            @(book.Author ?? "Unknown Author")
                        </p>
                        @if (!string.IsNullOrEmpty(book.ISBN))
                        {
                            <p class="text-muted text-xs mb-2">
                                <i class="fas fa-barcode me-1"></i>ISBN: @book.ISBN
                            </p>
                        }
                        <p class="text-muted text-xs mb-2">
                            <i class="fas fa-building me-1"></i>@book.LibraryName
                        </p>
                        @if (book.AvailableCopies > 0)
                        {
                            <p class="text-success text-sm mb-3">
                                <i class="fas fa-check-circle me-1"></i>
                                @book.AvailableCopies available
                            </p>
                        }
                        else
                        {
                            <p class="text-danger text-sm mb-3">
                                <i class="fas fa-times-circle me-1"></i>
                                Not available
                            </p>
                        }
                        <div class="mt-auto">
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" 
                               class="btn btn-sm btn-primary w-100">
                                <i class="fas fa-info-circle me-1"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-search text-muted mb-3" style="font-size: 4rem;"></i>
                    <h4 class="text-muted">No results found</h4>
                    <p class="text-muted">
                        Try using different keywords or check the spelling
                    </p>
                    <a asp-action="Advanced" class="btn btn-primary mt-3">
                        <i class="fas fa-sliders-h me-2"></i>Try Advanced Search
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-search text-primary mb-3" style="font-size: 4rem;"></i>
                    <h4>Start Your Search</h4>
                    <p class="text-muted">
                        Enter keywords above to find books in our collection
                    </p>
                </div>
            </div>
        </div>
    </div>
}
