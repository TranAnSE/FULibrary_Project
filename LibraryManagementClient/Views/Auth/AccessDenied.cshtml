@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow-md">
            <div class="card-body p-5">
                <i class="fas fa-ban text-danger" style="font-size: 5rem;"></i>
                <h1 class="mt-4 text-danger">Access Denied</h1>
                <p class="lead text-muted">
                    You do not have permission to access this resource.
                </p>
                <p class="text-muted">
                    If you believe you should have access, please contact the library administrator.
                </p>
                <div class="mt-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Go to Home
                    </a>
                    <a asp-area="" asp-controller="Auth" asp-action="Logout" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
