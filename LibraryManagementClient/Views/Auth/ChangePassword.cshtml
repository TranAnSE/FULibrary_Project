@model LibraryManagementClient.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-md">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-key me-2"></i>Change Password
                </h4>
            </div>
            <div class="card-body p-4">
                @if (TempData["Info"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle me-2"></i>@TempData["Info"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>Current Password
                        </label>
                        <input asp-for="CurrentPassword" class="form-control form-control-lg" placeholder="Enter current password" autofocus />
                        <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>New Password
                        </label>
                        <input asp-for="NewPassword" class="form-control form-control-lg" placeholder="At least 6 characters" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Password must be at least 6 characters long
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="fas fa-check-circle me-1"></i>Confirm New Password
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Re-enter new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-check me-2"></i>Change Password
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light text-center">
                <small class="text-muted">
                    <i class="fas fa-shield-alt me-1"></i>
                    Choose a strong password to protect your account
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
